{
    "/api/external/{external_id}/messages/": {
        "post": {
            "summary": "Отправка сообщения",
            "operationId": "api_external_messages_store",
            "tags": [
                "External Messages"
            ],
            "parameters": [
                {
                    "name": "external_id",
                    "in": "path",
                    "required": true,
                    "schema": {
                        "type": "string"
                    },
                    "description": "Внешний идентификатор пользователя",
                    "example": "u123"
                }
            ],
            "requestBody": {
                "required": true,
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/api_external_messages_store"
                        }
                    }
                }
            },
            "responses": {
                "200": {
                    "description": "Сообщение успешно отправлено!",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/api_external_messages_store_response_200"
                            }
                        }
                    }
                }
            }
        }
    }
}
