{
    "/api/files/{file_id}": {
        "post": {
            "summary": "Передача файла на скачивание по Telegram File ID",
            "operationId": "api_files_file_post",
            "tags": [
                "Files"
            ],
            "parameters": [
                {
                    "name": "file_id",
                    "in": "path",
                    "required": true,
                    "schema": {
                        "type": "string"
                    },
                    "description": "Telegram File ID",
                    "example": "BQACAgIAAx0CAgAB"
                }
            ],
            "responses": {
                "200": {
                    "description": "Файл отправлен на скачивание!"
                }
            }
        }
    }
}
